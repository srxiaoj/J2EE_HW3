<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>FavoriteList via JSP Model 2</display-name>
    <description>
      Favorite List
    </description>

    <context-param>
        <param-name>  jdbcDriverName          </param-name>
        <param-value> com.mysql.jdbc.Driver   </param-value>
    </context-param>

    <context-param>
        <param-name>  jdbcURL                 </param-name>
        <param-value> jdbc:mysql:///test  </param-value>
    </context-param>

    <servlet>
        <servlet-name>  register-servlet       </servlet-name>
        <servlet-class>
        	edu.cmu.cs.webapp.todolist6.Register
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>  login-servlet       </servlet-name>
        <servlet-class>
        	edu.cmu.cs.webapp.todolist6.Login
        </servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>  click-servlet       </servlet-name>
        <servlet-class>
        	edu.cmu.cs.webapp.todolist6.ClickUpdate
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>  favoriteList-servlet       </servlet-name>
        <servlet-class>
        	edu.cmu.cs.webapp.todolist6.FavoriteList
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>  register-servlet        </servlet-name>
        <url-pattern>   /Register   </url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>  login-servlet        </servlet-name>
        <url-pattern>   /Login   </url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>  favoriteList-servlet        </servlet-name>
        <url-pattern>   /FavoriteList   </url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>  click-servlet        </servlet-name>
        <url-pattern>   /Fav/*   </url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>   Login   </welcome-file>
    </welcome-file-list>

</web-app>
