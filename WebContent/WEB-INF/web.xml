<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>ToDoList via SQL</display-name>
    <description>
      Example of the use of SQL and JDBC
    </description>


	<context-param>
        <param-name>  jdbcDriverName          </param-name>
        <param-value> com.mysql.jdbc.Driver   </param-value>
    </context-param>

    <context-param>
        <param-name>  jdbcURL                 </param-name>
        <param-value> jdbc:mysql:///test  </param-value>
    </context-param>
    
    <servlet>
        <servlet-name>  my-servlet       </servlet-name>
        <servlet-class>
        	HW3
        </servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>  login-servlet       </servlet-name>
        <servlet-class>
        	.Login
        </servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>  register-servlet       </servlet-name>
        <servlet-class>
        	Register
        </servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>  clickUpdate-servlet       </servlet-name>
        <servlet-class>
        	ClickUpdate
        </servlet-class>
    </servlet>
    
       
    <servlet-mapping>
        <servlet-name>  my-servlet        </servlet-name>
        <url-pattern>   /HW3   			  </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>  login-servlet        </servlet-name>
        <url-pattern>   /Login   </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>  register-servlet        </servlet-name>
        <url-pattern>   /register    	  </url-pattern>
        <!-- for /register.html url pattern-->
        <!-- neither /register or /register/* or /register* or /register.**** work here-->
        <!-- but *.html and /register.html work-->
    </servlet-mapping>
       
    <servlet-mapping>
        <servlet-name> clickUpdate-servlet </servlet-name>
        <url-pattern>	/fav/*   </url-pattern>
    </servlet-mapping>
       

    
    <welcome-file-list>
        <welcome-file>   Login   </welcome-file>
    </welcome-file-list>

</web-app>
